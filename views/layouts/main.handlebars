<!--<!DOCTYPE html>-->
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BANDIT</title>
    <link rel="stylesheet" href="/public/css/styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Sono">
  </head>
  <body>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/dompurify@3.2.3/dist/purify.min.js"
    ></script>
    <main>
      <nav>
        <div class="nav-left">
          {{#if (isValidObject user)}}
            <a href="/game" class="nav-link">Join a Room</a>
          {{else}}
            <a href="/users/login" class="nav-link">Login</a>
            <a href="/users/signup" class="nav-link">Sign Up</a>
          {{/if}}
        </div>
        <div class="nav-right">
          {{#if (isValidObject user)}}
            <a href="/users/{{user.id}}" class="nav-link profile-button">User
              Profile</a>
            <a href="/users/logout" class="nav-link logout-button">Logout</a>
          {{/if}}
        </div>

      </nav>
      {{#if (isValidObject user)}}
        <p id="greeting">You are logged in as
          <span id="greeting_username">{{user.username}}</span>.</p>
      {{/if}}
      <div id="banditContainer">
        <p class="tile">B</p>
        <p class="tile">A</p>
        <p class="tile">N</p>
        <p class="tile">D</p>
        <p class="tile">I</p>
        <p class="tile">T</p>
      </div>
      {{{body}}}

    </main>

    <script src="/public/js/unhideText.js"></script>
    <script src="/public/js/disconnectWarning.js"></script>
  </body>
</html>