<div class="formContainer">
  {{#if error}}
    <p>Error: {{error}}</p>
  {{/if}}

  <div>
    <form id="roomForm">
      <input id="username" value={{user.username}} type="hidden" />
      <label for="passcode">Enter a passcode to join users with (optional)</label>
      <input id="passcode" name="passcode" placeholder="passcode" />

      <input class="submit" type="submit" value="Search for players!" />
    </form>

    <p id="roomStatus" hidden></p>
    <p id="playerNumber" hidden></p>

    <button id="startButton" hidden> Start the game!</button>
    <p id="waitForHost" hidden>Waiting for the host to start the game</p>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/public/js/searchRoom.js"></script>
</div>